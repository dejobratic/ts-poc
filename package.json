    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7"
  },
  "jest": {
    "preset": "ts-jest",
